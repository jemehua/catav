<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @alumno.object %>
    <h1>Edit <%= @alumno.nombre%></h1>
    <%= link_to "Delete", :action => :delete, :id => @alumno.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @alumno.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Nombre: </td>
              <td class="itemValue"><input type="text" name="alumno[nombre]" value="<%= @alumno.nombre %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Apellido: </td>
              <td class="itemValue"><input type="text" name="alumno[apellido]" value="<%= @alumno.apellido %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
